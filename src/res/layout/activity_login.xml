<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="@mipmap/login">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Login    "
        android:id="@+id/loginButton"
        android:background="@drawable/button_mild_style"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:textSize="35dip"
        android:layout_alignTop="@+id/registerButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Register "
        android:id="@+id/registerButton"
        android:background="@drawable/button_fierce_style"
        android:textSize="35dip"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/passwordText"
        android:layout_alignEnd="@+id/passwordText"
        android:singleLine="false"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Input Password"
        android:ems="15"
        android:id="@+id/passwordText"
        android:layout_above="@+id/loginButton"
        android:layout_alignLeft="@+id/nameText"
        android:layout_alignStart="@+id/nameText"
        android:layout_marginBottom="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Input name"
        android:ems="15"
        android:id="@+id/nameText"
        android:layout_above="@+id/passwordText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
